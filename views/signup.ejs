<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Sign up</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">

  <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Open+Sans'>
  <link rel="stylesheet" href="css/signup.css">
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.1/jquery.validate.js'></script>
  <script src="js/signup.js"></script>
  <script src="js/signup-validation.js"></script>

</head>

<body>
  <div class="cont">
    <div class="demo">
      <div class="login">
        <div class="login__check"></div>
        <% if (message.length > 0) { %>
            <div class="alert__form"><%= message %></div>
        <% } %>
        <form class="login__form" action="/signup" method="post" name="signup" >

          <div class="login__row">
            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
              <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
            </svg>
            <input type="text" class="login__input name" placeholder="Username" name="email"/>
          </div>

          <div class="login__row">
            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
              <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
            </svg>
            <input type="password" id="password" class="login__input pass" placeholder="Password" name="password"/>
          </div>

          <div class="login__row">
            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
              <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
            </svg>
            <input type="password" id="cpassword" class="login__input pass" placeholder="Confirm Password" name="cpassword"/>
          </div>

          <button type="submit" class="login__submit">Sign up</button>
          <p class="login__signup">Already have an account? &nbsp;<a href="/login">Sign in</a></p>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
